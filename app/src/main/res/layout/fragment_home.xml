<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E6DEDE">

    <Button
        android:id="@+id/auto_nav4"
        android:layout_width="109dp"
        android:layout_height="109dp"
        android:layout_marginStart="244dp"
        android:layout_marginTop="472dp"
        android:background="@drawable/round_button"
        android:onClick="goToMapFragment"
        app:iconSize="75dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/auto_nav2"
        android:layout_width="109dp"
        android:layout_height="109dp"
        android:layout_marginStart="56dp"
        android:layout_marginTop="148dp"
        android:background="@drawable/round_button"
        android:onClick="goToMapFragment"
        app:icon="@drawable/gps"
        app:iconSize="75dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/auto_nav3"
        android:layout_width="109dp"
        android:layout_height="109dp"
        android:layout_marginStart="56dp"
        android:layout_marginTop="472dp"
        android:background="@drawable/round_button"
        android:onClick="goToMapFragment"
        app:iconSize="75dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/auto_nav"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_marginStart="104dp"
        android:layout_marginTop="264dp"
        android:background="@drawable/round_big_button"
        android:onClick="goToMapFragment"
        app:iconSize="120dp"
        app:iconTint="#f00"
        android:gravity="center_horizontal|top"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/settings"
        android:layout_width="109dp"
        android:layout_height="109dp"
        android:layout_marginEnd="56dp"
        android:layout_marginBottom="472dp"
        android:background="@drawable/round_button"
        app:icon="@drawable/ic_settings"
        app:iconSize="75dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/home_page_title"
        android:layout_width="348dp"
        android:layout_height="124dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="68dp"
        android:backgroundTint="#03A9F4"
        android:fontFamily="arial"
        android:gravity="left"
        android:lineSpacingExtra="-7dp"
        android:text="Wheelchair Control"
        android:textColor="#03A9F4"
        android:textSize="40sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.746"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>